@model Lab02_WebsiteBanHang.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg p-4" style="width: 600px; border-radius: 15px; border: none;">
        <h2 class="text-center mb-4 text-danger fw-bold">Delete Category</h2>

        <div class="alert alert-warning text-center shadow-sm rounded-3">
            <h4 class="fw-semibold mb-0">Are you sure you want to delete this category?</h4>
        </div>

        <div class="card shadow-sm p-4 mt-3 rounded-3">
            <div class="d-flex align-items-center">
                <span class="fw-semibold text-muted me-2">Name:</span>
                <span>@Model.Name</span>
            </div>
        </div>

        <form asp-action="DeleteConfirmed" method="post" class="mt-4">
            <input type="hidden" asp-for="Id"/>
            <div class="d-flex justify-content-between gap-3">
                <button type="submit" class="btn btn-danger btn-lg w-50 rounded-pill shadow-sm fw-semibold">Confirm</button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg w-50 rounded-pill shadow-sm fw-semibold">Cancel</a>
            </div>
        </form>
    </div>
</div>
