@model Lab02_WebsiteBanHang.Models.Product

<div class="container mt-4">
    <div class="alert alert-danger text-center">
        <h2>Bạn chắc chắn muốn xóa sản phẩm này?</h2>
    </div>

    <div class="card p-4 text-center">
        <h4><strong>Name:</strong> @Model.Name</h4>
        <h4><strong>Price:</strong> @Model.Price.ToString("C")</h4>
        <h4><strong>Description:</strong> @Model.Description</h4>
    </div>

    <form asp-action="DeleteConfirmed" method="post" class="mt-4 text-center">
        <input type="hidden" asp-for="Id"/>
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
