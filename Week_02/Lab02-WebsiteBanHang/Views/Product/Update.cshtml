@model Lab02_WebsiteBanHang.Models.Product

<div class="container mt-4">
    <h2>Edit Product</h2>

    <form asp-action="Update" method="post" class="card p-4">
        <input type="hidden" asp-for="Id"/>

        <div class="form-group">
            <label asp-for="Name" class="font-weight-bold"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="font-weight-bold"></label>
            <input asp-for="Price" class="form-control">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="font-weight-bold"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
