@model IEnumerable<THLTW_B2.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* General Styling */
    body {
        background-color: #f4f7fc;
        font-family: 'Poppins', sans-serif;
    }

    .container-custom {
        max-width: 90%;
        margin: 40px auto;
    }

    h2 {
        font-weight: bold;
        color: #007bff;
    }

    /* Product Grid Layout */
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        padding: 20px;
    }

    .product-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        text-align: center;
        padding: 15px;
        transition: all 0.3s ease;
    }

    .product-card:hover {
        transform: scale(1.05);
        box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.2);
    }

    .product-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-bottom: 1px solid #ddd;
    }

    .product-info {
        padding: 10px 0;
    }

    .product-name {
        font-size: 16px;
        font-weight: bold;
        color: #333;
    }

    .product-price {
        font-size: 18px;
        font-weight: bold;
        color: #dc3545;
        margin: 5px 0;
    }

    .product-description {
        font-size: 14px;
        color: #555;
        margin: 5px 0;
        min-height: 40px;
    }

    /* Button Styling */
    .btn-container {
        display: flex;
        justify-content: center;
        margin-top: 10px;
    }

    .btn {
        padding: 6px 12px;
        font-size: 14px;
        border-radius: 5px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn:hover {
        transform: translateY(-2px);
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>

<div class="container-custom">
    <div class="mb-4 text-center">
        <h2>Our Products</h2>
    </div>

    <div class="product-grid">
        @foreach (var product in Model)
        {
            <div class="product-card">
                @if (!string.IsNullOrEmpty(product.ImageUrl))
                {
                    <img src="@product.ImageUrl" alt="Product Image" class="product-image">
                }
                <div class="product-info">
                    <div class="product-name">@product.Name</div>
                    <div class="product-price">@product.Price.ToString("N0") $</div>
                    <div class="product-description">@product.Description</div>
                    <div class="btn-container">
                       <a asp-controller="Product" asp-action="Display" asp-route-id="@product.Id" class="btn btn-primary btn-sm">
                            <i class="bi bi-eye"></i> View Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
