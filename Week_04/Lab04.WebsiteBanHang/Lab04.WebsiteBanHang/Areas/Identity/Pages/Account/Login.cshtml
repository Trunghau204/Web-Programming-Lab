@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@if (ViewData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@ViewData["SuccessMessage"]</div>
}

<div class="login-container">
    <div class="card login-card">
        <div class="card-body">
            <h1 class="login-title">@ViewData["Title"]</h1>

            <!-- Local Account Login -->
            <form id="account" method="post" class="login-form">
                <h2 class="form-subtitle">Sign in with your account</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="form-group mb-4">
                    <label asp-for="Input.Email" class="form-label-static">Email</label>
                    <input asp-for="Input.Email" class="form-control form-control-modern"
                           autocomplete="username"
                           aria-required="true"
                           placeholder="Enter your email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Input.Password" class="form-label-static">Password</label>
                    <input asp-for="Input.Password" class="form-control form-control-modern"
                           autocomplete="current-password"
                           aria-required="true"
                           placeholder="Enter your password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="form-check-label">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <a asp-page="./ForgotPassword" class="link-modern">Forgot Password?</a>
                </div>

                <button id="login-submit" type="submit" class="btn btn-primary btn-modern w-100 mb-3">Sign In</button>

                <div class="text-center additional-links">
                    <p>New here? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-modern">Create an account</a></p>
                    <p><a asp-page="./ResendEmailConfirmation" class="link-modern">Resend email confirmation</a></p>
                </div>
            </form>

            <!-- External Logins -->
            @if (Model.ExternalLogins?.Count > 0)
            {
                <div class="external-login-section">
                    <div class="divider">
                        <span>OR</span>
                    </div>
                    <form id="external-account" asp-page="./ExternalLogin"
                          asp-route-returnUrl="@Model.ReturnUrl"
                          method="post">
                        <div class="external-login-buttons">
                            @foreach (var provider in Model.ExternalLogins)
                            {
                                <button type="submit"
                                        name="provider"
                                        value="@provider.Name"
                                        class="btn btn-outline-modern"
                                        title="Log in using your @provider.DisplayName account">
                                    @provider.DisplayName
                                </button>
                            }
                        </div>
                    </form>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        padding: 20px;
    }

    .login-card {
        width: 100%;
        max-width: 450px;
        border: none;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        background: white;
    }

    .login-title {
        font-size: 2rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 2rem;
        color: #1a1a1a;
    }

    .form-subtitle {
        font-size: 1.25rem;
        color: #666;
        margin-bottom: 1.5rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label-static {
        display: block;
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }

    .form-control-modern {
        border: none;
        border-bottom: 2px solid #ddd;
        border-radius: 0;
        padding: 0.75rem 0;
        transition: border-color 0.3s ease;
    }

    .form-control-modern:focus {
        border-color: #007bff;
        box-shadow: none;
        outline: none;
    }

    .btn-modern {
        padding: 0.75rem;
        border-radius: 25px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }

    .btn-modern:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 123, 255, 0.3);
    }

    .link-modern {
        color: #007bff;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .link-modern:hover {
        color: #0056b3;
        text-decoration: underline;
    }

    .divider {
        position: relative;
        text-align: center;
        margin: 2rem 0;
    }

    .divider span {
        background: white;
        padding: 0 1rem;
        color: #666;
        position: relative;
        z-index: 1;
    }

    .divider:before {
        content: '';
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        height: 1px;
        background: #ddd;
    }

    .external-login-buttons {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .btn-outline-modern {
        border: 2px solid #ddd;
        padding: 0.75rem;
        border-radius: 25px;
        color: #666;
        background: transparent;
        transition: all 0.3s ease;
    }

    .btn-outline-modern:hover {
        border-color: #007bff;
        color: #007bff;
        transform: translateY(-2px);
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
