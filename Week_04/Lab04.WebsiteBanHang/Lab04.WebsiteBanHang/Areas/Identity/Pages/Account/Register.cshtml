@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="register-container">
    <div class="card register-card">
        <div class="card-body">
            <h1 class="register-title">@ViewData["Title"]</h1>
            
            <!-- Registration Form -->
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="register-form">
                <h2 class="form-subtitle">Create your account</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="form-group mb-4">
                    <label asp-for="Input.Email" class="form-label-static">Email</label>
                    <input asp-for="Input.Email" class="form-control form-control-modern" 
                           autocomplete="username" 
                           aria-required="true" 
                           placeholder="Enter your email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Input.FullName" class="form-label-static">Full Name</label>
                    <input asp-for="Input.FullName" class="form-control form-control-modern" 
                           autocomplete="name" 
                           aria-required="true" 
                           placeholder="Enter your full name" />
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Input.Password" class="form-label-static">Password</label>
                    <input asp-for="Input.Password" class="form-control form-control-modern" 
                           autocomplete="new-password" 
                           aria-required="true" 
                           placeholder="Create a password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Input.ConfirmPassword" class="form-label-static">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control form-control-modern" 
                           autocomplete="new-password" 
                           aria-required="true" 
                           placeholder="Confirm your password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Input.Role" class="form-label-static">Role</label>
                    <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" 
                            class="form-control form-control-modern">
                        <option disabled selected>- Select Role -</option>
                    </select>
                </div>

                <button id="registerSubmit" type="submit" class="btn btn-primary btn-modern w-100 mb-3">Create Account</button>
            </form>

            <!-- External Logins -->
            @if (Model.ExternalLogins?.Count > 0)
            {
                <div class="external-login-section">
                    <div class="divider">
                        <span>OR</span>
                    </div>
                    <form id="external-account" asp-page="./ExternalLogin" 
                          asp-route-returnUrl="@Model.ReturnUrl" 
                          method="post">
                        <div class="external-login-buttons">
                            @foreach (var provider in Model.ExternalLogins)
                            {
                                <button type="submit" 
                                        name="provider" 
                                        value="@provider.Name" 
                                        class="btn btn-outline-modern"
                                        title="Register using your @provider.DisplayName account">
                                    @provider.DisplayName
                                </button>
                            }
                        </div>
                    </form>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .register-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        padding: 20px;
    }

    .register-card {
        width: 100%;
        max-width: 450px;
        border: none;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        background: white;
    }

    .register-title {
        font-size: 2rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 2rem;
        color: #1a1a1a;
    }

    .form-subtitle {
        font-size: 1.25rem;
        color: #666;
        margin-bottom: 1.5rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label-static {
        display: block;
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }

    .form-control-modern {
        border: none;
        border-bottom: 2px solid #ddd;
        border-radius: 0;
        padding: 0.75rem 0;
        transition: border-color 0.3s ease;
    }

    .form-control-modern:focus {
        border-color: #007bff;
        box-shadow: none;
        outline: none;
    }

    .btn-modern {
        padding: 0.75rem;
        border-radius: 25px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }

    .btn-modern:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 123, 255, 0.3);
    }

    .divider {
        position: relative;
        text-align: center;
        margin: 2rem 0;
    }

    .divider span {
        background: white;
        padding: 0 1rem;
        color: #666;
        position: relative;
        z-index: 1;
    }

    .divider:before {
        content: '';
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        height: 1px;
        background: #ddd;
    }

    .external-login-buttons {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .btn-outline-modern {
        border: 2px solid #ddd;
        padding: 0.75rem;
        border-radius: 25px;
        color: #666;
        background: transparent;
        transition: all 0.3s ease;
    }

    .btn-outline-modern:hover {
        border-color: #007bff;
        color: #007bff;
        transform: translateY(-2px);
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}