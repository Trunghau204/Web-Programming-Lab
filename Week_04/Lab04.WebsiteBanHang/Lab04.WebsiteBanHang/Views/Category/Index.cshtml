@model IEnumerable<THLTW_B2.Models.Category>

@{
    ViewData["Title"] = "Category List";
}

<style>
    /* General Styling */
    body {
        background-color: #f4f7fc;
        font-family: 'Poppins', sans-serif;
    }

    .container-custom {
        max-width: 85%;
        margin: 40px auto;
    }

    h2 {
        font-weight: bold;
        color: #007bff;
    }

    /* Table Styling */
    .table {
        border-radius: 10px;
        overflow: hidden;
        background-color: white;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    }

    .table thead {
        background: #007bff;
        color: white;
        font-weight: bold;
    }

    .table th, .table td {
        padding: 15px;
        text-align: center;
    }

    .table td {
        vertical-align: middle;
    }

    .table tbody tr {
        transition: all 0.3s ease;
    }

    .table tbody tr:hover {
        background-color: #e9f2ff;
    }

    /* Button Styling */
    .btn {
        padding: 8px 15px;
        font-size: 14px;
        border-radius: 5px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn:hover {
        transform: translateY(-2px);
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }

    .btn-secondary {
        background-color: #5a6268;
        color: white;
    }

    .btn-secondary:hover {
        background-color: #444b50;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }
</style>

<div class="container-custom">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Category List</h2>
        <a asp-action="Add" class="btn btn-primary">Add Category</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover shadow-sm">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Category Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td class="fw-bold text-dark">@category.Id</td>
                        <td class="fw-semibold">@category.Name</td>
                        <td>
                            <a asp-action="Display" asp-route-id="@category.Id" class="btn btn-primary">View</a>
                            <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-secondary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
