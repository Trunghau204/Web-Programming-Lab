    @model THLTW_B2.Models.Product

    @{
        ViewData["Title"] = "Delete Product";
    }

    <style>
        /* Container Styling */
        .delete-container {
            max-width: 500px;
            margin: 50px auto;
            padding: 30px;
            background: white;
            border-radius: 10px;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        h2 {
            font-weight: bold;
            color: #dc3545;
        }

        h4 {
            font-size: 18px;
            color: #333;
            margin-bottom: 10px;
        }

        /* Button Styling */
        .btn {
            padding: 10px 15px;
            font-size: 16px;
            border-radius: 5px;
            font-weight: 600;
            transition: all 0.3s ease;
            width: 100%;
        }

        .btn:hover {
            transform: translateY(-2px);
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            color: white;
        }

        .btn-danger:hover {
            background-color: #a71d2a;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

        .btn-group-custom {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }

        /* Image Styling */
        .product-image {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 10px;
            margin-bottom: 15px;
        }
    </style>

    <div class="delete-container">
        <h2>Are you sure you want to delete this product?</h2>

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="Product Image" class="product-image" />
        }

        <h4><strong>Name:</strong> @Model.Name</h4>
        <h4><strong>Price:</strong> @Model.Price.ToString("N0") đ</h4>
        <h4><strong>Description:</strong> @Model.Description</h4>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="btn-group-custom">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
