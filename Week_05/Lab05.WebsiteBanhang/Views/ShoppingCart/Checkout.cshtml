@model Lab04.WebsiteBanHang.Models.Order

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="checkout-container">
    <h2>Checkout</h2>
    <form asp-action="Checkout" method="post">
        <div class="form-group">
            <label asp-for="ShippingAddress">Shipping Address</label>
            <input asp-for="ShippingAddress" class="form-control modern-input" placeholder="Nhập địa chỉ của bạn" />
        </div>
        <div class="form-group">
            <label asp-for="Notes">Notes</label>
            <textarea asp-for="Notes" class="form-control modern-input" rows="4" placeholder="Bạn có yêu cầu đặc biệt nào không?"></textarea>
        </div>
        <button type="submit" class="btn modern-btn btn-success">Place Order</button>
    </form>
</div>

<style>
    /* Checkout container */
    .checkout-container {
        background: #fff;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
        max-width: 600px;
        margin: 40px auto;
        transition: all 0.3s ease;
    }

    /* Heading */
    h2 {
        color: #2c3e50;
        text-align: center;
        margin-bottom: 30px;
        font-weight: 600;
        letter-spacing: 1px;
    }

    /* Form group */
    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: 500;
        color: #34495e;
        display: block;
        margin-bottom: 8px;
    }

    /* Modern input styles */
    .modern-input {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid #ddd;
        border-radius: 10px;
        font-size: 14px;
        color: #34495e;
        background: #f9f9f9;
        transition: all 0.3s ease;
    }

    .modern-input:focus {
        border-color: #3498db;
        background: #fff;
        box-shadow: 0 0 8px rgba(52, 152, 219, 0.2);
        outline: none;
    }

    .modern-input::placeholder {
        color: #7f8c8d;
        font-style: italic;
    }

    /* Button styles */
    .modern-btn {
        padding: 12px;
        border-radius: 25px;
        font-size: 16px;
        font-weight: 500;
        width: 100%;
        transition: all 0.3s ease;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
        border: none;
    }

    .btn-success {
        background: #2ecc71;
    }

    .btn-success:hover {
        background: #27ae60;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(46, 204, 113, 0.3);
    }
</style>