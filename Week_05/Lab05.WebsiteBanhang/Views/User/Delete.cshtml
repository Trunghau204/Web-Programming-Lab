@model Lab04.WebsiteBanHang.Models.UserRoleViewModel
@{
    ViewData["Title"] = "Xóa người dùng";
}

<style>
    .delete-container {
        max-width: 600px;
        margin: 3rem auto;
        padding: 2rem;
        border-radius: 15px;
        background: white;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        border: 1px solid #f0f0f0;
        text-align: center;
    }

    h2 {
        font-size: 2rem;
        font-weight: 800;
        background: linear-gradient(45deg, #e74c3c, #c0392b);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 2rem;
    }

    /* Product & User Info Styling */
    .delete-info {
        margin: 1.5rem 0;
    }

    h4 {
        font-size: 1.1rem;
        color: #7f8c8d;
        margin-bottom: 1rem;
        font-weight: 500;
    }

    .info-value {
        color: #2c3e50;
        font-weight: 700;
    }

    .text-price {
        font-size: 1rem;
        font-weight: 600;
        color: #2c3e50;
        background: #fff5f5;
        padding: 0.25rem 1rem;
        border-radius: 20px;
        display: inline-block;
    }

    /* Image Styling */
    .image-container {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        justify-content: center;
        margin-bottom: 1.5rem;
    }

    .product-image {
        width: 120px;
        height: 120px;
        object-fit: contain;
        border-radius: 10px;
        transition: transform 0.3s ease;
    }

    .product-image:hover {
        transform: scale(1.05);
    }

    .image-placeholder {
        width: 100%;
        height: 120px;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #666;
        font-size: 1rem;
        font-weight: 500;
        border-radius: 10px;
        margin-bottom: 1.5rem;
    }

    /* Button Styling */
    .button-group {
        display: flex;
        gap: 10px;
        justify-content: center;
        flex-wrap: wrap;
        margin-top: 2rem;
    }

    .btn {
        padding: 0.5rem 1.2rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 5px;
        border: none;
        color: white;
        min-width: 150px;
        justify-content: center;
    }

    .btn-delete {
        background: linear-gradient(45deg, #e74c3c, #c0392b);
    }

    .btn-cancel {
        background: linear-gradient(45deg, #95a5a6, #7f8c8d);
    }

    .btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        filter: brightness(1.1);
    }

    
    
</style>

<div class="delete-container">
    <h2>Are you sure you want to delete this user?</h2>
    <h4><strong>FullName:</strong> @Model.FullName</h4>
    <h4><strong>Email:</strong> @Model.Email</h4>
    <h4><strong>Role:</strong> @string.Join(", ", Model.SelectedRole)</h4>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="UserId" />
        <div class="btn-group-custom">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary"> Cancel</a>
        </div>
    </form>
</div>
